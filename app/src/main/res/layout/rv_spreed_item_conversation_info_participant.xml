<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_8"
    android:paddingStart="@dimen/dp_8"
    android:background="@color/bg_meeting_detail_light_grey"
    >

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simple_drawee_view"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            app:roundAsCircle="true" />


    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/margin_between_elements"
        android:layout_marginEnd="@dimen/margin_between_elements"
        android:layout_toEndOf="@id/frame_layout"
        android:layout_toStartOf="@+id/voiceOrSimpleCallImageView"
        android:orientation="vertical">

        <androidx.emoji.widget.EmojiTextView
            android:id="@+id/name_text"
            style="@style/textViewBig"
            android:ellipsize="middle"
            android:singleLine="true"
            tools:text="Call item text"
            android:textColor="@color/white"
            />

        <androidx.emoji.widget.EmojiTextView
            android:id="@+id/secondary_text"
            style="@style/textViewMedium"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/white"
            tools:text="A week ago" />

    </LinearLayout>

    <ImageView
        android:id="@+id/voiceOrSimpleCallImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_mic_grey_600_24dp"
        android:layout_toLeftOf="@+id/videoCallImageView"
        android:layout_centerVertical="true"

         />

    <ImageView
        android:id="@+id/videoCallImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|end"
        android:src="@drawable/ic_videocam_grey_600_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_8"
         />

</RelativeLayout>
